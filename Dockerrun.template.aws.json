{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "wydbackend",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/wydbackend:latest",
      "hostname": "wydbackend",
      "essential": true,
      "memory": 2048,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ]
    },
    {
      "name": "wydclient",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/wydclient:latest",
      "hostname": "wydclient",
      "essential": true,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },
    {
      "name": "nginx",
      "image": "${AWS_ACCOUNT_ID}.dkr.ecr.us-west-2.amazonaws.com/wydnginx:latest",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["wydbackend", "wydclient"],
      "memory": 512
    }
  ]
}
